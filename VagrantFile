Vagrant.configure("2") do |config|
  config.vm.box = "centos64-x64-vbox43"
  config.vm.box_url = "https://puphpet.s3.amazonaws.com/centos64-x64-vbox43.box"
  #config.vm.synced_folder "./", "/var/www", id: "vagrant-root", :nfs => false

  # For Apache
  config.vm.network :forwarded_port, host: 80, guest: 80
  
  # Stop on any error
  config.vm.provision "shell", inline: "set -e"
  
  config.vm.provision "shell", path: "setup/basic_tools.sh"
  config.vm.provision "shell", path: "setup/lamp.sh"
  
  config.vm.provision "shell", path: "setup/python3.sh"
  #config.vm.provision "shell", path: "setup/scientific.sh"

  config.vm.provision "shell", path: "setup/misc.sh"
  config.vm.provision :shell, :inline => "echo VAGRANT IS READY."
end
