 Vagrant.configure("2") do |config|
  config.vm.box = "cent64"
  config.vm.box_url = "https://dl.dropbox.com/u/7225008/Vagrant/CentOS-6.3-x86_64-minimal.box" 
  config.vm.provision :shell, :inline => $BOOTSTRAP_SCRIPT # see below
end

$BOOTSTRAP_SCRIPT = <<EOF
  set -e # Stop on any error
  #export DEBIAN_FRONTEND=noninteractive

  #echo VAGRANT SETUP: DOING APT-GET STUFF...
  # Install prereqs
  #sudo apt-get update
  #sudo apt-get install -y python-software-properties curl git

  # Make vagrant automatically go to /vagrant when we ssh in.
  #echo "cd /vagrant" | sudo tee -a ~vagrant/.profile
  
  echo DOWNLOADING PYTHON3
  wget http://www.python.org/ftp/python/3.3.2/Python-3.3.2.tar.bz2
  echo UNPACKING
  tar jxvf Python-3.3.2.tar.bz2
  cd Python-3.*
  echo BUILDING AND INSTALLING
  ./configure
  make
  sudo make install

  echo VAGRANT IS READY.
EOF
